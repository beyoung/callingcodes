---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WorldMap from '../components/WorldMap.astro';
import CountryPanel from '../components/CountryPanel.astro';

const title = "Global Calling Codes Map - Phone Codes & Country Information";
const description = "Explore phone codes, timezones, and detailed information for countries worldwide. Easily find communication information for any country through our interactive map.";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "Global Calling Codes Map",
  "description": description,
  "url": "https://callingcodes.ayamap.com",
  "applicationCategory": "UtilityApplication",
  "operatingSystem": "Web Browser",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  },
  "featureList": [
    "Interactive world map",
    "Country phone codes lookup",
    "Timezone information",
    "Country details and statistics"
  ]
};
---

<BaseLayout 
  title={title} 
  description={description}
  keywords="phone codes,international codes,global map,calling codes,country codes,timezone,world map"
  structuredData={structuredData}
>
  <Header />
  <main>
    <div class="flex flex-col lg:flex-row h-screen">
      <!-- 地图区域 -->
      <div class="flex-1 relative">
        <WorldMap />
      </div>
      
      <!-- 侧边栏 -->
      <div class="lg:w-96 bg-white shadow-lg">
        <CountryPanel />
      </div>
    </div>
  </main>
  <Footer />
</BaseLayout>
